{
  "manifest_version": 3,
  "name": "B2B Realtime Coach",
  "version": "1.0.0",
  "description": "Assistant commercial en temps reel (objections, battle cards, scoring live).",
  "action": {
    "default_popup": "index.html",
    "default_title": "B2B Coach"
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs", "tabCapture", "offscreen", "activeTab", "scripting", "audioCapture"],
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*",
    "https://youtube.com/*",
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://meet.google.com/*",
        "https://*.zoom.us/*",
        "https://teams.microsoft.com/*",
        "https://youtube.com/*",
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": ["src/content.jsx"],
      "run_at": "document_idle"
    }
  ]
}
